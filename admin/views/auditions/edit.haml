.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:auditions, :index)
      %li=link_to pat(:new), url(:auditions, :new)
      %li.active=link_to pat(:edit), url(:auditions, :edit, :id => @audition.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:audition)
    .inner
      -form_for :audition, url(:auditions, :update, :id => @audition.id), :method => :put, :class => :form do |f|
        =partial "auditions/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")