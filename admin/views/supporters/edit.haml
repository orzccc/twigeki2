.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:supporters, :index)
      %li=link_to pat(:new), url(:supporters, :new)
      %li.active=link_to pat(:edit), url(:supporters, :edit, :id => @supporter.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:supporter)
    .inner
      -form_for :supporter, url(:supporters, :update, :id => @supporter.id), :method => :put, :class => :form do |f|
        =partial "supporters/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")