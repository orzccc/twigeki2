.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:supporters, :index)
      %li=link_to pat(:new), url(:supporters, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:supporters)
    .inner
      %table.table
        %tr
          %th.first=mat(:supporter, :id)
          %th=mat(:supporter, :team_id)
          %th=mat(:supporter, :user_id)
          %th=mat(:supporter, :created_at)
          %th=mat(:supporter, :updated_at)
          %th.last="&nbsp;"
        -@supporters.each do |supporter|
          %tr
            %td.first=supporter.id
            %td=supporter.team_id
            %td=supporter.user_id
            %td=supporter.created_at
            %td=supporter.updated_at
            %td.last
              =button_to pat(:edit), url(:supporters, :edit, :id => supporter.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:supporters, :destroy, :id => supporter.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')"
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")