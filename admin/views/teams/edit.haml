.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:teams, :index)
      %li=link_to pat(:new), url(:teams, :new)
      %li.active=link_to pat(:edit), url(:teams, :edit, :id => @team.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:team)
    .inner
      -form_for :team, url(:teams, :update, :id => @team.id), :method => :put, :class => :form do |f|
        =partial "teams/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")