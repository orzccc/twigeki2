.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:teams, :index)
      %li=link_to pat(:new), url(:teams, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:teams)
    .inner
      %table.table
        %tr
          %th.first=mat(:team, :id)
          %th=mat(:team, :title)
          %th=mat(:team, :created_at)
          %th=mat(:team, :updated_at)
          %th.last="&nbsp;"
        -@teams.each do |team|
          %tr
            %td.first=team.id
            %td=team.title
            %td=team.created_at
            %td=team.updated_at
            %td.last
              =button_to pat(:edit), url(:teams, :edit, :id => team.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:teams, :destroy, :id => team.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')"
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")