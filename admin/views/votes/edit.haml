.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:votes, :index)
      %li=link_to pat(:new), url(:votes, :new)
      %li.active=link_to pat(:edit), url(:votes, :edit, :id => @vote.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:vote)
    .inner
      -form_for :vote, url(:votes, :update, :id => @vote.id), :method => :put, :class => :form do |f|
        =partial "votes/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")