.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:votes, :index)
      %li=link_to pat(:new), url(:votes, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:votes)
    .inner
      %table.table
        %tr
          %th.first=mat(:vote, :id)
          %th=mat(:vote, :candidate_id)
          %th=mat(:vote, :user_id)
          %th=mat(:vote, :created_at)
          %th=mat(:vote, :updated_at)
          %th.last="&nbsp;"
        -@votes.each do |vote|
          %tr
            %td.first=vote.id
            %td=vote.candidate_id
            %td=vote.user_id
            %td=vote.created_at
            %td=vote.updated_at
            %td.last
              =button_to pat(:edit), url(:votes, :edit, :id => vote.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:votes, :destroy, :id => vote.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')"
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")